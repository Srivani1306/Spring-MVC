<?xml version="1.0" encoding="UTF-8"?>

<beans xmlns="http://www.springframework.org/schema/beans"
xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
 xsi:schemaLocation="http://www.springframework.org/schema/beans 
 http://www.springframework.org/schema/beans/spring-beans-4.0.xsd">
 
 <bean id="loginController" class="com.spring.LoginController">
 <property name="loginModel" ref="loginModel"></property>
 </bean>
 
 <bean id="loginModel" class="com.spring.LoginModel  "></bean>
 <bean id="loginMapper" class="org.springframework.web.servlet.handler.SimpleUrlHandlerMapping">
      <property name="mappings"> 
         <props>
            <prop key="/login.spring">loginController</prop>
         </props>
      </property>
 </bean>
 </beans>